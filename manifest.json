{
  "manifest_version": 3,
  "name": "LFC MatchDay",
  "version": "1.0",
  "description": "Displays Liverpool's next fixture.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://api.football-data.org/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
